{
  "name": "api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/api",
  "projectType": "application",
  "targets": {
    "generate-types": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node ../../node_modules/openapi-typescript-codegen/bin/index.js --input docs/v1/openapi.yaml --output src/types/v1/generated --client fetch",
        "cwd": "apps/api"
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsx src/server.ts",
        "cwd": "apps/api"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc",
        "cwd": "apps/api"
      }
    },
    "build:min": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "esbuild apps/api/src/server.ts --bundle  --minify --platform=node --external:yamljs --external:fs --outfile=dist/server.js --external:@fastify/swagger --external:@fastify/swagger-ui"
          }
        ],
        "cwd": "apps/api"
      }
    }
  }
}