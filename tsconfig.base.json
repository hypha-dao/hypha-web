{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2020",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@hypha-platform/authentication": [
        "packages/authentication/src/index.ts"
      ],
      "@hypha-platform/cookie": ["packages/cookie/src/index.ts"],
      "@hypha-platform/core/server": ["packages/core/src/server.ts"],
      "@hypha-platform/core/client": ["packages/core/src/client.ts"],
      "@hypha-platform/evm": ["packages/evm/src/index.ts"],
      "@hypha-platform/epics": ["packages/epics/src/index.ts"],
      "@hypha-platform/feature-flags": ["packages/feature-flags/src/index.ts"],
      "@hypha-platform/i18n": ["packages/i18n/src/index.ts"],
      "@hypha-platform/i18n/client": ["packages/i18n/src/client.ts"],
      "@hypha-platform/lib/utils": ["packages/ui-utils/src/index.ts"],
      "@hypha-platform/storage-evm": ["packages/storage-evm/src/index.ts"],
      "@hypha-platform/storage-evm/artifacts/contracts/*": [
        "packages/storage-evm/artifacts/contracts/*"
      ],
      "@hypha-platform/storage-evm/typechain-types": [
        "packages/storage-evm/typechain-types"
      ],
      "@hypha-platform/storage-postgres": [
        "packages/storage-postgres/src/index.ts"
      ],
      "@hypha-platform/ui": ["packages/ui/src/index.ts"],
      "@hypha-platform/ui/styles.css": ["packages/ui/src/styles.css"],
      "@hypha-platform/ui-utils": ["packages/ui-utils/src/index.ts"],
      "@hypha-platform/ui-utils/global.css": [
        "packages/ui-utils/src/global.css"
      ],
      "@hypha-platform/ui/server": ["packages/ui/src/server.ts"],
      "@web/*": ["apps/web/src/*"],
      "@core/*": ["packages/core/src/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
